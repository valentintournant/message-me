<h4 class="ui center aligned medium icon header"><i class="circular blue rocketchat icon"></i> Say something</h4>
<div class="container">
  <div class="ui four column grid">
    <div class="one wide column"></div>
    <div class=" ten wide column">
      <div class="ui fluid raised card chatbox">
        <div class="content" id="messages">
          <div class="ui feed" id="message-container">
            <%= render @messages %>
          </div>
        </div>
        <div class="extra content">
          <%= form_for(@message, html: {class: "ui reply form", role: "form"}, url: message_path, remote: true) do |f| %>
            <div class="field">
              <div class="ui fluid icon input">
                <%= f.text_field :body %>
                <%= f.button '<i class="bordered inverted blue edit icon"></i>'.html_safe %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="four wide column">
      <div class="ui fluid raised card chatbox">
        <div class="content">
          <div class="ui blue vertical menu">
            <a class="active item">Home</a> <a class="item">Messages</a> <a class="item">Friends</a>
          </div>
        </div>
      </div>
    </div>
    <div class="one wide column"></div>
  </div>
</div>
